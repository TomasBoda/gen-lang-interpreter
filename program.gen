
object address {
    var street = "Down Street";
    var city = "London";
}

object person {
    var age = 25;
    var name = "John Doe";
    var addr = new address;
}

func person_print_details(var person) {
    print "Personal details" endl;
    print "--------------------------------" endl;
    print "| Name:    ";
    print person.name endl;
    print "| Age:     ";
    print person.age endl;
    print "| Address: ";
    print person.addr.street;
    print ", ";
    print person.addr.city endl;
    print "--------------------------------";
}

func main() {
    var p = new person;
    person_print_details(p);
}